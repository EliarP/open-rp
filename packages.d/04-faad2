CONFIGURE="./configure \
	--prefix=$PREFIX \
	--enable-shared \
	--enable-static \
	--without-xmms \
	--without-drm \
	--without-mpeg4ip"
SOURCE=faad2-2.7

if [ "$OS" == "MINGW32_NT-5.1" -o "$OS" == "MINGW32_NT-6.1" ]; then
	TARGET=libfaad
elif [ "$OS" == "Darwin" ]; then
	LIBFIX=libfaad
fi

