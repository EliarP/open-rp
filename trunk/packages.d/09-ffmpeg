CONFIGURE="./configure \
	--prefix=$PREFIX \
	--enable-gpl \
	--disable-ffmpeg \
	--disable-ffplay \
	--disable-ffserver \
	--disable-network \
	--disable-encoders \
	--disable-decoders \
	--disable-muxers \
	--disable-demuxers \
	--enable-demuxer=m4v \
	--disable-parsers \
	--disable-bsfs \
	--disable-protocols \
	--disable-indevs \
	--disable-outdevs \
	--disable-filters \
	--enable-decoder=libfaad \
	--enable-decoder=atrac3 \
	--enable-decoder=h264 \
	--enable-decoder=mpeg4 \
	--enable-libfaad"
LIBS=$PREFIX/lib/libfaad.a
SOURCE=ffmpeg-svn

if [ "$OS" == "MINGW32" ]; then
	CONFIGURE="$CONFIGURE --enable-memalign-hack"
elif [ "$OS" == "Darwin" -a -x "$(which sysctl)" ]; then
	OS_64BIT=$(sysctl hw.optional.x86_64 | cut -d' ' -f 2)
	if [ "$OS_64BIT" != "0" ]; then
		CONFIGURE="$CONFIGURE --arch=x86_x64"
	fi
fi

# vi: syntax=sh
